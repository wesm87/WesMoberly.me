{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
