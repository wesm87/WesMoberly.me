<?xml version="1.0"?>
<ruleset name="SkyVerge">
	<description>Custom ruleset for WordPress development</description>

	<!--
	You must have the WordPress-Coding-Standards sniffs installed:
	https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards
	-->
	<rule ref="WordPress-Core"></rule>
	<rule ref="WordPress-Docs"></rule>
	<rule ref="WordPress-Extra"></rule>

	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing.BlankLineAfterEnd"/>
	</rule>

	<!--
	<rule ref="Squiz.Commenting.ClassComment">
		<exclude name="Squiz.Commenting.ClassComment.SpacingBefore"/>
	</rule>
	-->
</ruleset>
